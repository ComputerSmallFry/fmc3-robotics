{
  "tools": [
    {
      "name": "connect",
      "description": "Connect to SO101 using a LeRobot config file.",
      "parameters": {
        "type": "object",
        "properties": {
          "robot_config_path": { "type": "string" },
          "camera_name": { "type": "string", "default": "handeye" },
          "enable_camera": { "type": "boolean", "default": true }
        },
        "required": ["robot_config_path"]
      }
    },
    {
      "name": "disconnect",
      "description": "Disconnect from SO101.",
      "parameters": { "type": "object", "properties": {} }
    },
    {
      "name": "get_observation",
      "description": "Get joint state and optional camera image.",
      "parameters": {
        "type": "object",
        "properties": {
          "image_format": { "type": "string", "enum": ["jpeg_base64", "raw"], "default": "jpeg_base64" },
          "max_width": { "type": "integer", "default": 640 },
          "max_height": { "type": "integer", "default": 480 },
          "include": {
            "type": "array",
            "items": { "type": "string", "enum": ["state", "image"] },
            "default": ["state", "image"]
          }
        }
      }
    },
    {
      "name": "move_joints",
      "description": "Move joints by interpolating to a target joint vector.",
      "parameters": {
        "type": "object",
        "properties": {
          "q": { "type": "array", "items": { "type": "number" } },
          "duration_s": { "type": "number", "default": 1.0 },
          "rate_hz": { "type": "integer", "default": 50 },
          "max_delta_per_step": { "type": "number", "default": 0.05 }
        },
        "required": ["q"]
      }
    },
    {
      "name": "gripper",
      "description": "Open or close the gripper.",
      "parameters": {
        "type": "object",
        "properties": {
          "command": { "type": "string", "enum": ["open", "close"] },
          "timeout_s": { "type": "number", "default": 3.0 }
        },
        "required": ["command"]
      }
    },
    {
      "name": "stop",
      "description": "Stop motion by holding current joint state.",
      "parameters": { "type": "object", "properties": {} }
    },
    {
      "name": "start_record",
      "description": "Start a simple local recording session.",
      "parameters": {
        "type": "object",
        "properties": {
          "session": { "type": "object" }
        },
        "required": ["session"]
      }
    },
    {
      "name": "stop_record",
      "description": "Stop recording and save the episode.",
      "parameters": { "type": "object", "properties": {} }
    },
    {
      "name": "replay_episode",
      "description": "Replay a saved episode.",
      "parameters": {
        "type": "object",
        "properties": {
          "episode_path": { "type": "string" },
          "speed_scale": { "type": "number", "default": 1.0 }
        },
        "required": ["episode_path"]
      }
    },
    {
      "name": "pick_and_place",
      "description": "Move to pick joints, close gripper, move to place joints, open gripper.",
      "parameters": {
        "type": "object",
        "properties": {
          "pick_q": { "type": "array", "items": { "type": "number" } },
          "place_q": { "type": "array", "items": { "type": "number" } },
          "approach_duration_s": { "type": "number", "default": 1.0 },
          "lift_duration_s": { "type": "number", "default": 1.0 },
          "rate_hz": { "type": "integer", "default": 50 },
          "max_delta_per_step": { "type": "number", "default": 0.05 }
        },
        "required": ["pick_q", "place_q"]
      }
    }
  ]
}
